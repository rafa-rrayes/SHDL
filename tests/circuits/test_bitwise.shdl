# 8-bit Bitwise Operations

# 8-bit bitwise AND
component BitwiseAND8(A[8], B[8]) -> (O[8]) {
    >i[8]{
        and{i}: AND;
    }
    
    connect {
        >i[8]{
            A[{i}] -> and{i}.A;
            B[{i}] -> and{i}.B;
            and{i}.O -> O[{i}];
        }
    }
}

